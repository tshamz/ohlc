        "icon-128.png",
        "icon-34.png",
        "*.map"
      ],
      "extension_ids": ["kpbkdojlmgnjcgdmjgdnfgdnmkcdgplo"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "webRequest",
    "declarativeNetRequest",
    "unlimitedStorage",
    "storage",
    "alarms",
    "history",
    "idle",
    "notifications",
    "scripting",
    "webNavigation"
  ],
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "host_permissions": ["https://*.predictit.org/*", "wss://*.predictit.org/*"]
